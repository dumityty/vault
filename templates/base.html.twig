<!DOCTYPE html>
<html>
  <head>
    {% include 'html/head.html.twig' %}
  </head>
  <body>
    {% include 'html/navbar.html.twig' %}

    <div class="container-fluid">
      <div class="col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2 col-xs-12">
    	<!-- <div class="col-sm-12 col-md-6 col-md-offset-3 col-lg-4 col-lg-offset-4"> -->
        <div class="row">
  		    <div class="flash">
            {% if flash.info is iterable %}
              {% for info in flash.info %}
                <div class="alert alert-info" role="alert">{{ info }}</div>
              {% endfor %}
            {% elseif flash.info is not empty %}
              <div class="alert alert-info" role="alert">{{ flash.info }}</div>
            {% endif %}
            {% if flash.success is iterable %}
              {% for success in flash.success %}
                <div class="alert alert-success" role="alert">{{ success }}</div>
              {% endfor %}
            {% elseif flash.success is not empty %}
              <div class="alert alert-success" role="alert">{{ flash.success }}</div>
            {% endif %}
            {% if flash.error is iterable %}
              {% for error in flash.error %}
                <div class="alert alert-danger" role="alert">{{ error }}</div>
              {% endfor %}
            {% elseif flash.error is not empty %}
              <div class="alert alert-danger" role="alert">{{ flash.error }}</div>
            {% endif %}

            
          </div>
        </div>
        {% block content %}
		    {% endblock %}
	  	</div>
	  </div>
  </body>
</html>
