{% extends 'base.html.twig' %}

{% block content %}
  <div class="row">
    {% if credentials is not empty %}
    <table id="credentials" class="table table-hover">
      <thead>
        <tr>
          <th>Site</th>
          <th>Username</th>
          <th>Password</th>
          <th>URL</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        {% for c in credentials %}
          <tr>
            <td>{{ c.site }}</td>
            <td>{{ c.username }}</td>
            <td><a href="{{urlFor('masterone', {'id': c.id } )}}"><span class="glyphicon glyphicon-eye-open"></span></a></td>
            <td>{{ c.url }}</td>
            <td><a href="{{urlFor('masteredit', {'id': c.id } )}}">edit</a> | <a href="{{urlFor('masterdelete', {'id': c.id } )}}">delete</a></td>
          </tr>
        {% endfor %}
      </tbody>
    </table>
    {% endif %}
  </div>
{% endblock %}