{% extends 'base.html.twig' %}

{% block content %}
  <div class="row">
    <div class="col-md-12">
      <a href="{{urlFor('credentialadd',{"vault":vault})}}" class="btn btn-success pull-right">Add</a>
    </div>
  </div>
  <br>
  <div class="row">
    {% if credentials is not empty %}
    <table id="credentials" class="table table-hover">
      <thead>
        <tr>
          <th>Site</th>
          <th>Username</th>
          <th>Password</th>
          <th>URL</th>
          <th>Comment</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        {% for c in credentials %}
          <tr>
            <td>{{ c.site }}</td>
            <td>{{ c.username }}</td>
            <td><a href="{{urlFor('credentialone', {'vault': vault, 'id': c.id } )}}"><span class="glyphicon glyphicon-eye-open"></span></a></td>
            <td>{{ c.url }}</td>
            <td>{{ c.comment }}</td>
            <td><a href="{{urlFor('credentialedit', {'vault': vault, 'id': c.id } )}}">edit</a> | <a href="{{urlFor('credentialdelete', {'vault': vault, 'id': c.id } )}}">delete</a></td>
          </tr>
        {% endfor %}
      </tbody>
    </table>
    {% else %}
      <p class="text-danger text-center">No credentials found.</p
    {% endif %}
  </div>
{% endblock %}